options {
    directory "/var/cache/bind";
    dnssec-validation no;
    auth-nxdomain no;    # conform to RFC1035
    listen-on-v6 { any; };
    max-cache-size 90%;
    
    # end of auto-generated options

    recursion yes;
    allow-recursion {
        internal;
    };

    forwarders {
        8.8.8.8;
        8.8.4.4;
    };
};

acl "internal" {
    192.168.2.0/24;
    localhost;
};
